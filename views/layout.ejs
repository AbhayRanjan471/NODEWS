<html>
    <head>
        <title>
            <%= title %>
        </title>

        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">
    
        <!--using <%- style %> : if there is any style tage in the body it will atuomaticallly put it here  -->
        <%- style %>
    </head>

    
    <body>
        <!-- udsing partial -->
        <%- include('_header'); %>
        <!-- adding the flash -->
        <% if(flash.success && flash.success.length > 0){ %>
            <h5>
                <%= flash.success %>
            </h5>
            <% } %>

        <!-- body contains the  variable part which would keep on changing as we switch the page -->
        <!-- here the body will contains the home.ejs or user_profile.ejs file whichever we will search on server -->
       <main id="layout-main">
         <%- body %>
       </main>

        <%- include('_footer'); %>

        <!-- id there is script tag in the body it will automatically put it here -->
        <%- script %>
    </body>

    
</html>